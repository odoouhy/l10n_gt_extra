<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_diario">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="20"/>
            <t t-set="data_report_header_spacing" t-value="10"/>
            <div class="header">
                Folio: <span class="page" t-esc="data['folio_inicial']-1"></span>
            </div>
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Libro Diario</h2>


                    <div class="row mt32">
			<div>
                            <strong>NIT:</strong> <span t-esc="user.company_id.vat"/><br/>
                            <strong>Nombre comercial:</strong> <span t-esc="user.company_id.partner_id.name"/><br/>
                            <strong>Domicilio fiscal:</strong> <span t-esc="user.company_id.partner_id.street"/><br/>
                            <strong>Registro del:</strong> <span t-esc="data['fecha_desde']" t-esc-options='{"widget": "date"}'/> al: <span t-esc="data['fecha_hasta']" t-esc-options='{"widget": "date"}'/><br/>
			</div>
                    </div>

                    <t t-set="result" t-value="lineas(data)"/>
                    
                    <table class="table table-sm">
                        <t t-if="data['agrupado_por_dia'] == true">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Codigo</th>
                                    <th>Cuenta</th>
                                    <th class="text-right">Debe</th>
                                    <th class="text-right">Haber</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="result['lineas']" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-esc="l['fecha']" t-esc-options='{"widget": "date"}'/>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                    <t t-foreach="l['cuentas']" t-as="ld">
                                        <tr>
                                            <td></td>
                                            <td><span t-esc="ld['codigo']"/></td>
                                            <td><span t-esc="ld['cuenta']"/></td>
                                            <td class="text-right"><span t-esc="'{0:,.2f}'.format(ld['debe'])"/></td>
                                            <td class="text-right"><span t-esc="'{0:,.2f}'.format(ld['haber'])"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                            <b>Totales</b>
                                        </td>
                                        <td class="text-right border-top" >
                                            <b><span t-esc="'{0:,.2f}'.format(l['total_debe'])"/></b>
                                        </td>
                                        <td class="text-right border-top">
                                            <b><span t-esc="'{0:,.2f}'.format(l['total_haber'])"/></b>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </t>
                        <t t-else="">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Cuenta</th>
                                    <th class="text-right">Debe</th>
                                    <th class="text-right">Haber</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="result['lineas']" t-as="l">
                                    <td>
                                        <span t-esc="l['codigo']"/>
                                    </td>
                                    <td>
                                        <span t-esc="l['cuenta']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'{0:,.2f}'.format(l['debe'])" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc=" '{0:,.2f}'.format(l['haber'])" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-top">
                                    <td>
                                        <b>Totales</b>
                                    </td>
                                    <td class="text-right">
                                    </td>
                                    <td class="text-right border-top" >
                                        <b><span t-esc="'{0:,.2f}'.format(result['totales']['debe'])" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></b>
                                    </td>
                                    <td class="text-right border-top">
                                        <b><span t-esc="'{0:,.2f}'.format(result['totales']['haber'])" t-esc-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></b>
                                    </td>
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
